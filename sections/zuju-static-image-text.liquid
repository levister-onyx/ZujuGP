

<div class="static_component">
	<div class="static_component-image desktop_image">
		<img class="lazyload fade-in"
      src="{{ section.settings.desktop_image.src | img_url: '1440x400'}}" >
	</div>

	<div class="static_component-image mobile_image">
		<img class="lazyload fade-in"
			src="{{ section.settings.mobile_image.src | img_url: '1440x400'}}" >
	</div>

	<div class="static_component-text">
		<div class="static_component-text__wrapper__zuju">
			<h3 class="h3 static_component-text__title__zuju">{{ section.settings.heading }}</h3>
			<div class="static_component-text__description">{{ section.settings.text }}</div>
			{% if section.settings.button_text != blank %}
				<a class="btn{% if section.settings.use_second_button %} btn--secondary{% endif %} btn_zuju" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
			{% endif %}
		</div>
	</div>
</div>


