<style>
.scrollContent{
  background: url("{{ 'shopify-masthead.jpg' | asset_url }}") no-repeat fixed center;
  background-color: #000;
  object-fit: contain;
  object-position: center;
}

</style>

<ul id="menu"></ul>
<div id="content-wrapper">

    <section class="scrollContent">     
          
      <section class="panel" id="doors">
          <div class="splashTitle">
              <h1>WELCOME TO THE CHAMBER OF GIFTS</h1>
              <p style="color: whitesmoke">SCROLL TO ENTER</p>
              <p style="color: whitesmoke">V</p>
          </div>
          <img src="{{ 'door-left.jpg' | asset_url }}" class="doorLeft">
          <img src="{{ 'door-right.jpg' | asset_url }}" class="doorRight">
      </section>
      
      <section class="panel" id="doors_opened">
        <div class="splashText">
          <h1>IT'S NOT WHAT YOU HAVE BUT HOW YOU USE WHAT YOU HAVE</h1>
        </div>
      </section>

    </section>
</div>

<script src="{{ 'doors.js' | asset_url }}"></script>

